{% extends 'base.html.twig' %}

{% block title %}
  Hello BlogController!
{% endblock %}

{% block body %}
  <h1>
    Hello {{ controller_name }}! âœ…
  </h1>

  {% for article in articles %}
    <div class=" card my-3 p-4 col-12">
      <h2 class="container">
        {{ article.title }}
      </h2>

      
      <p class=" lead">
        {{ article.introduction }}
      </p>
      <p class="lead">
        <img class="fit-picture" src="{{ article.image }}" alt="" />
      </p>
      
      <hr class="my-2" />
      <p class="lead">
        <a class="btn btn-primary btn-lg" href="{{ path('blog_view', { id: article.id }) }}" role="button">
          Voir plus ...
        </a>
      </p>
      <p class="lead">
        {{ article.source }}
      </p>
    </div>
  {% endfor %}
{% endblock %}
